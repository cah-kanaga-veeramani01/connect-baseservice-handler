{
	"openapi": "3.0.0",
	"info": {
		"version": "1.0.0",
		"title": "External Base Service APIs",
		"description": "External APIs for product partners",
		"license": {
			"name": "MIT",
			"url": "https://opensource.org/licenses/MIT"
		}
	},
	"servers": [
		{
			"url": "/",
			"description": "Local Dev"
		}
	],
	"tags": [
		{
			"name": "BaseService",
			"description": "API for Services in the system"
		}
	],
	"security": [
		{
		   "bearerAuth": []
		}
	],
	"paths": {
        "/service/external/{serviceID}/module/:moduleID": {
            "post": {
                "tags": ["Base Service"],
                "summary": "Module configuration for base service",
                "parameters": [
                    {
                        "name": "serviceID",
                        "in": "path",
                        "description": "Service ID for the base service",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "moduleID",
                        "in": "path",
                        "description": "moduleID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "base service",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SaveBaseServiceInfo"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "base service attributes added",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AddBaseServiceAttributesResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/service/external/attributes": {
            "get": {
                "tags": [
                    "Base Service"
                ],
                "summary": "Get service attributes details in the system based on the serviceID",
                "parameters": [
                    {
                        "name": "serviceID",
                        "in": "query",
                        "description": "serviceID",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": 1

                    },
                    {
                        "name": "legacyTIPDetailID",
                        "in": "query",
                        "description": "legacyTIPDetailID",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Service Attributes details for serviceID or legacyTipID",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ListOfServiceAttributes"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/service/external/details": {
            "get": {
                "tags": [
                    "Base Service"
                ],
                "summary": "Get service details in the system based on the serviceID or leagacyTipID",
                "parameters": [
                    {
                        "name": "serviceID",
                        "in": "query",
                        "description": "serviceID",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": 1
                    },
                    {
                        "name": "legacyTIPDetailID",
                        "in": "query",
                        "description": "legacyTIPDetailID",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Service details for serviceID or legacyTipID",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BaseServiceDetails"
                                }
                            }
                        }
                    }
                }
            }
        }
       
    },
    "components": {
        "securitySchemes": {
			"bearerAuth": {
			  "type": "http",
			  "scheme": "bearer",
			  "bearerFormat": "JWT"
			}
		  },
        "schemas": {
            "SaveBaseServiceInfo": {
                "type": "object",
                "properties": {
                    "moduleVersion": {
                        "type": "integer",
                        "description": "represents specific version of the base service"
                    }
                }
            },
            "AddBaseServiceAttributesResponse": {
                "type": "object",
                "properties": {
                    "moduleID": {
                        "type": "number",
                        "description": "represents specific modules of the base service"
                    },
                    "moduleVersion": {
                        "type": "integer",
                        "description": "represents specific version of the base service"
                    },
                    "message" : {
                        "type": "string",
                        "description": "success message"
                    }
                }
            },
            "ListOfServiceAttributes": {
                "type": "object",
				"properties": {
                    "serviceAttributes":{
                         "type": "array",
                        "properties": {
                            "items": {
                                "type": "object",
                                "properties": {
                                    "serviceID": {
                                        "type": "number",
                                        "description": "represents specific ID of the base service"
                                    },
                                    "legacyTIPDetailID": {
                                        "type": "number",
                                        "description": "represents specific ID of the legacyTipID"
                                    },
                                    "attributes":{
                                        "type": "object",
                                        "properties": {
                                            "key": {
                                                "type": "string",
                                                "description": "Attribute category"
                                            },
                                            "value": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string",
                                                    "description": "Attribute list"
                                                }
                                            }
                                        }
                                    
                                    }
                                
                                }
                            }
                        }
                    }
                   
                },
                "example": 
                    {
                        "serviceAttributes": [
                          {
                            "serviceID": 1,
                            "legacyTIPDetailID": 1,
                            "attributes": {
                              "Role": [
                                "TECHELIGIBLE"
                              ]
                            }
                          }
                        ]
                      }
			},
            "BaseServiceDetails": {
                "type": "object",
				"properties": {
                    "serviceDetails":{
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "serviceType": {
                                    "type": "integer",
                                    "description": "Service Type for base service",
                                    "example": "Tip"
                                },
                                "serviceID": {
                                    "type": "integer",
                                    "description": "Unique ID for base service",
                                    "example": 1
                                },
                                "serviceDisplayName": {
                                    "type": "string",
                                    "description": "Name of the service which is present in legacyTip",
                                    "example": "abc"
                                },
                                "globalServiceVersion": {
                                    "type": "integer",
                                    "description": "Unique version for base service",
                                    "example": 1
                                },
                                "validFrom": {
                                    "type": "string",
                                    "description": "starting date of the servcie",
                                    "example": "mm-dd-yyyy"
                                },
                                "validTill": {
                                    "type": "integer",
                                    "description": "End date of the base service",
                                    "example": "mm-dd-yyyy"
                                }
                            }
                        }

                    }
				}
			}
        }
    }
}
